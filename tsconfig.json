{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "allowJs": true,
        "typeRoots": ["node_modules/@types"],
        "lib": ["dom", "dom.iterable", "esnext"],
        "types": ["@types/jest", "jest", "node"]
    },
    "paths": {
        "@/*": ["./src/*"]
    },
    "include": ["./src/**/*", "src", "tests", "src/tests", "src/**/*.ts", "tests/*.ts"],
    "exclude": [
        "jest.config.js_",
        "jest.config.ts",
        "jest.setup.ts",
        "src/**/*.test.ts",
        "src/**/*.spec.ts",
        "src/**/__tests__/**/*.ts",
        "node_modules"
    ]
}